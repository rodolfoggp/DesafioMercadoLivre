<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HomeCentralText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/home_central_text</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/medium_gray</item>
    </style>

    <style name="HomeSearchTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/search_placeholder</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:drawableLeft">@drawable/search</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>

    <style name="YellowToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="SearchToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchToolbarDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="SearchToolbarButton">
        <item name="android:layout_width">@dimen/back_button_size</item>
        <item name="android:layout_height">@dimen/back_button_size</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="android:tint">@color/medium_gray</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SearchToolbarEditText">
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:elevation">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>
</resources>